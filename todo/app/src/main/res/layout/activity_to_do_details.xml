<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context=".details.ToDoDetailsActivity">

    <TextView
        android:id="@+id/todo_title"
        style="@style/TextListTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="@string/title_hint" />

    <TextView
        android:id="@+id/todo_description"
        style="@style/TextListDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/todo_title"
        tools:text="@string/description_hint" />

    <Button
        android:id="@+id/mark_as_done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/mark_done"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>